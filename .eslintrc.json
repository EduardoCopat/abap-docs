{
    "env": {
        "commonjs": true,
        "es2020": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:import/errors",
        "plugin:import/warnings",
        "plugin:import/typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "import/extensions": ["off"],
        "no-unused-vars": ["error", {
            "argsIgnorePattern": "^_"
        }]
    },
    "ignorePatterns": ["*.js"],
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["./"],
                "extensions": [".ts"]
            }
        }
    },
    "overrides": [{
        "files": ["*.ts", "*.tsx"],
        "rules": {
            "@typescript-eslint/no-unused-vars": [2, {
                "args": "none"
            }]
        }
    }]
}