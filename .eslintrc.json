{
    "env": {
        "commonjs": true,
        "es2020": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:import/errors",
        "plugin:import/warnings",
        "plugin:import/typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "import/extensions": ["off"]
    },
    "settings": {
        "import/resolver": {
            "node": {
                //"paths": ["./src"],
                "extensions": [".ts"]
            }
        }
    }
}